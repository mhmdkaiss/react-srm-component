{
  "name": "@nicecactus/srm",
  "version": "0.0.0",
  "description": "Core library for Standalone React Module",
  "author": "nicecactus",
  "license": "MIT",
  "repository": "nicecactus/srm",
  "main": "dist/index.js",
  "source": "index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format cjs",
    "start": "microbundle-crl watch --m --no-compress --format cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "build:css": "node-sass src/ -o dist/src",
    "watch:css": "yarn build:css && yarn build:css -w -r",
    "css": "npm-run-all css-compile css-prefix css-rtl css-minify",
    "css-compile": "node-sass src/styles --importer node_modules/node-sass-package-importer/dist/cli.js --output-style expanded --source-map true --source-map-embed -o dist/src/styles",
    "css-compile2": "sass --style expanded --source-map --embed-sources --no-error-css src/styles/:dist/src/styles",
    "copy-styles": "cp src/styles/{colors,mixins,variables}.scss dist/src/styles/",
    "copy-assets": "mkdir -p dist/src/styles/img &&  cp src/styles/img/* dist/src/styles/img"
  },
  "peerDependencies": {
    "easy-peasy": "^3.3.0",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-intl": "^5.0.0",
    "react-router-dom": "^5.2.0"
  },
  "dependencies": {
    "bootstrap": "^5.1.1",
    "easy-peasy": "^3.3.1",
    "react-bootstrap": "^1.6.3",
    "webpack": "^5.52.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.0",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "clean-css-cli": "^5.3.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "microbundle-crl": "^0.13.10",
    "node-sass": "^6.0.1",
    "node-sass-package-importer": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.0.4",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-intl": "^5.12.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "rollup-plugin-smart-asset": "^2.1.2",
    "sass": "^1.39.0",
    "sass-package-importer": "^1.0.0",
    "typescript": "^3.7.5",
    "typescript-react-intl": "^0.4.1"
  },
  "files": [
    "dist"
  ]
}
